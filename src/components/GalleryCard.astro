---
import Image from "../components/Image.astro";

interface CardProps {
  src: string;
  folder: string;
  name?: string;
  galleryId?: string;
}

const { src, folder, name = "No name provided" } = Astro.props as CardProps;
---

<div class="card">
  <a href={`/gallery/${folder}`}>
    <div class="image-wrapper">
      <Image src={src} alt={name} width={320} height={200} lazy />
      <div class="name">{name}</div>
    </div>
  </a>
</div>

<style>
  .card {
    grid-row-end: span 27;
    background: #fff;
    cursor: pointer;
    box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
    /* padding: 8px; */
    /* border-radius: 5px; */
  }

  .card:hover {
    box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.24);
  }

  .image-wrapper {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .name {
    display: flex;
    align-items: center;
    height: 100%;
    padding: 0.5rem;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }
</style>
