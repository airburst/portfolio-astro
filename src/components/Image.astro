---
const IMAGE_KIT_URL = "https://ik.imagekit.io/mfimages";

type ImageProps = {
  src: string;
  width?: number;
  height?: number;
  quality?: number;
  alt?: string;
};

const getImageKitUrl = ({ src, width, quality }: ImageProps) => {
  if (src[0] === "/") src = src.slice(1);
  const params = [`w-${width}`];
  if (quality) {
    params.push(`q-${quality}`);
  }
  const paramsString = params.join(",");

  return `${IMAGE_KIT_URL}/${src}?tr=${paramsString}`;
};

const { src, width, height, quality, alt } = Astro.props as ImageProps;
const ikUrl = getImageKitUrl({ src, width, quality });
---

<img
  class="gallery"
  src={ikUrl}
  width={`${width}px`}
  max-width="100%"
  height={`${height}px`}
  alt={alt}
/>

<style>
  img.gallery {
    background-color: var(--color-text-muted);
    object-fit: cover;
    /* border-radius: 5px; */
  }
</style>
