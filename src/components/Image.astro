---
const IMAGE_KIT_URL = "https://ik.imagekit.io/mfimages";

type ImageProps = {
  src: string;
  width?: number;
  quality?: number;
  alt?: string;
};

const getImageKitUrl = ({ src, width, quality }: ImageProps) => {
  if (src[0] === "/") src = src.slice(1);
  const params = [`w-${width}`];
  if (quality) {
    params.push(`q-${quality}`);
  }
  const paramsString = params.join(",");

  return `${IMAGE_KIT_URL}/${src}?tr=${paramsString}`;
};

const { src, width, quality } = Astro.props;
const ikUrl = getImageKitUrl({ src, width, quality });
---

<img src={ikUrl} width={width} />

<style>
  .card {
    background: #fff;
    cursor: pointer;
    box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.1);

    &:hover {
      box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.16);
    }
  }

  .image-wrapper {
    position: relative;
    width: 340px;
    height: 240px;
  }

  .caption {
    display: flex;
    align-items: center;
    height: 3rem;
    padding: 0.5rem;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }
</style>
