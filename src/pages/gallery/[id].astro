---
import MainHead from "../../components/MainHead.astro";
import Footer from "../../components/Footer.astro";
import Nav from "../../components/Nav.astro";
import Image from "../../components/Image.astro";
import Photos from "../../services/Photos";
import lazyLoadImages from "../../services/lazyLoadImages";
import type { Gallery } from "../../types";

//  Pre-render id paths at build time
export async function getStaticPaths() {
  const galleries: Gallery[] = await Photos.getGalleries();
  return galleries.map(({ folder }) => ({ params: { id: folder } }));
}

const { id } = Astro.params;
const photos = await Photos.getPhotos(id as string);
---

<html lang="en">
  <head>
    <MainHead title="Photos" description="Photo galleries" />
  </head>
  <body>
    <Nav
      breadcrumbs={[
        { name: "photos", url: "/" },
        { name: id, url: `/gallery/${id}` },
      ]}
    />
    <div class="gallery-wrapper">
      <!-- <h1 class="heading">{id}</h1> -->
      <div class="gallery-grid">
        {
          photos?.map((shortUrl: string) => (
            <Image src={shortUrl} alt={shortUrl} width={400} lazy />
          ))
        }
      </div>
    </div>
    <Footer />
    <style>
      .gallery-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #f2f2f2;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 400px);
        grid-auto-rows: 10px;
        grid-column-gap: 1rem;
        width: 100vw;
        justify-content: center;
      }

      .heading {
        color: var(--color-text-muted);
        display: block;
        text-decoration: none;
        text-transform: uppercase;
      }
    </style>
  </body>
</html>

<script src="../../scripts/lazy-load-images.js"></script>
